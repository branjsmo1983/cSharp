@model List<SuperHero>

    @{ 
        ViewData["title"] = "";
    }

<h1>SuperHero List</h1>
<table class="table">
    <thead>
        <tr>
            <td>Hero Name</td>
            <td>Secret Name</td>
            <td>Can Fly</td>
            <td colspan="2">Operations</td>
        </tr>
    </thead>
    <tbody>
    @foreach(var sh in Model)
    {
            <tr>
                <td>@sh.HeroName</td>
                `<td>@sh.Power</td>
                <td>@sh.CanFly</td>
                <td><a class="btn btn-warning"
                       asp-controller="SuperHero"
                       asp-action="Edit"
                       asp-route-id="@sh.Id">Details</a></td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="SuperHero"
                       asp-action="Delete"
                       asp-route-id="@sh.Id">Delete</a>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <a class="btn btn-primary"
                       asp-controller="SuperHero"
                       asp-action="Edit">Add Hero</a>
                </td>
            </tr>
     }
    </tbody>
</table>