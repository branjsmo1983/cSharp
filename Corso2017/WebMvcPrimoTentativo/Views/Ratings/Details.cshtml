
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using WebMvcPrimoTentativo.Models
@model Teacher
@{ var title = Model.Id == 0 ? "Aggiungi valutazione" : "Modifica valutazione";}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body style="width: 1000px; margin: 0 auto;">
    <h1>@title</h1>
    <h2>@(Model.Id == 0 ? "Aggiungi valutazione" : "Modifica valutazione" )</h2>
    <form method="post" asp-controller="Ratings" asp-action="Details" class="form-group">
        <label class="control-label" asp-for="Name"></label>
        <input class="form-control" type="text" asp-for="Name" />
        <label class="control-label" asp-for="Rating"> (stelle):</label>
        <input class="form-control" type="number" asp-for="Rating" />
        <input class="btn btn-warning" type="submit" value="salva" />
    </form>
</body>
</html>

